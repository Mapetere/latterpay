# =============================================================================
# LatterPay Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# WhatsApp Business API Configuration
# -----------------------------------------------------------------------------
# Get these from Meta Developer Portal: https://developers.facebook.com

WHATSAPP_TOKEN=your_whatsapp_access_token_here
PHONE_NUMBER_ID=your_phone_number_id_here
VERIFY_TOKEN=your_custom_webhook_verify_token_here
WHATSAPP_BOT_NUMBER=263771234567

# -----------------------------------------------------------------------------
# Paynow Payment Gateway Configuration  
# -----------------------------------------------------------------------------
# Get these from Paynow Dashboard: https://www.paynow.co.zw

# ZWG (Local Currency) Integration
PAYNOW_ZWG_ID=your_zwg_integration_id
PAYNOW_ZWG_KEY=your_zwg_integration_key

# USD Integration
PAYNOW_USD_ID=your_usd_integration_id
PAYNOW_USD_KEY=your_usd_integration_key

# Paynow URLs (update with your domain)
PAYNOW_RETURN_URL=https://your-domain.com/payment-return
PAYNOW_RESULT_URL=https://your-domain.com/payment-result

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# Meta App Secret (for webhook signature verification)
META_APP_SECRET=your_meta_app_secret_here

# Private key passphrase (for Meta Flow encryption)
PRIVATE_KEY_PASSPHRASE=your_private_key_passphrase

# Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=generate_a_random_32_byte_hex_string

# -----------------------------------------------------------------------------
# Admin Configuration
# -----------------------------------------------------------------------------

# Admin phone number (receives alerts and can use /admin commands)
ADMIN_PHONE=263771234567

# Finance phone number (receives payment reports)
FINANCE_PHONE=263771234568

# Notification email (optional, for email alerts)
NOTIFICATION_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable registration flow
ENABLE_REGISTRATION=true

# Enable/disable donation flow
ENABLE_DONATIONS=true

# Enable encrypted Meta flows
ENABLE_META_FLOWS=true

# Require webhook signature verification (recommended for production)
ENABLE_WEBHOOK_VERIFICATION=false

# Debug mode (set to true for development)
DEBUG=false

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Port to run the server on
PORT=8010

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
